<% include includes/header.ejs %>
<div class="container">
    <div class="row space-100 justify-content-center">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="contents">
                <h2 class="head-title">Welcome to Weather Station</h2>
            </div>
            <div class="widget text-center">
                <h3 class="more-title">Check Weather Data details below.</h3>
            </div>
        </div>
    </div>
</div>
</header>

<section class="data section bg-gray" id="full-details">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Full Details</h2>
            <p>Check your Full data Details of weather</p>
        </div>

        <div class="about-content">
            <h3>The weather condition of Dhulikhel at <%= result.date_time %> is :</h3>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-xs-12 w-data">
                    <a>
                        <h3>Temperature</h3>
                        <h3><%= result.temperature %> &deg;C</h3>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-xs-12 w-data">
                    <a>
                        <h3>Pressure</h3>
                        <h3><%= result.pressure %> hPa</h3>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-xs-12 w-data ">
                    <a>
                        <h3>Humidity</h3>
                        <h3><%= result.humidity %> %</h3>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-xs-12 w-data border-right-0">
                    <a>
                        <h3>Altitude</h3>
                        <h3><%= result.altitude %> m</h3>
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>
<% include includes/footer.ejs %>